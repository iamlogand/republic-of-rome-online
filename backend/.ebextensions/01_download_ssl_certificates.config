Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["api-roronline-com-ssl"]
          roleName: "aws-elasticbeanstalk-service-role"

container_commands:
  01_download_ssl_certificates:
    command: |
      aws s3 cp s3://api-roronline-com-ssl/api_roronline_com.crt /etc/pki/tls/certs/api_roronline_com.crt
      aws s3 cp s3://api-roronline-com-ssl/certificate.key /etc/pki/tls/private/certificate.key
      aws s3 cp s3://api-roronline-com-ssl/AAACertificateServices.crt /etc/pki/tls/certs/AAACertificateServices.crt
      aws s3 cp s3://api-roronline-com-ssl/SectigoRSADomainValidationSecureServerCA.crt /etc/pki/tls/certs/SectigoRSADomainValidationSecureServerCA.crt
      aws s3 cp s3://api-roronline-com-ssl/USERTrustRSAAAACA.crt /etc/pki/tls/certs/USERTrustRSAAAACA.crt
